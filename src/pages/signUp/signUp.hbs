<div class="container">
    <div class="form__data">
        <div class="form__data-inputs">
            <div class="form__title">{{title}}</div>
            <label> {{email.id}}<br> {{{emailInput}}}</label>
            <label> {{login.id}}<br> {{{loginInput}}}</label>
            <label> {{display_name.id}}<br> {{{displayNameInput}}}</label>
            <label> {{first_name.id}}<br> {{{firstNameInput}}}</label>
            <label> {{second_name.id}}<br> {{{secondNameInput}}}</label>
            <label> {{phone.id}}<br> {{{phoneInput}}}</label>
            <label> {{password.id}}<br> {{{passwordInput}}}</label>
        </div>
        <div class="form__data-button">
            {{{button}}}
            <div class="footerNote"><a href="{{footerNote.url}}">{{footerNote.text}}</a></div>
        </div>
    </div>
</div>
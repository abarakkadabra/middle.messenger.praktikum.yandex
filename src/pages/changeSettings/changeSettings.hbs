<div class="settings__container">
    <div class="left__back">
        {{{backButton}}}
    </div>
    <div class="settings__main">
        {{{avatar}}}
        {{{title}}}

        <div class="user__settings">
            <div class="user__settings-item">
                <p class="user__set_name">Почта</p>
                {{{emailInput}}}
            </div>
            <div class="user__settings-item">
                <p class="user__set_name">Логин</p>
                {{{loginInput}}}
            </div>
            <div class="user__settings-item">
                <p class="user__set_name">Имя</p>
                {{{firstNameInput}}}
            </div>
            <div class="user__settings-item">
                <p class="user__set_name">Фамилия</p>
                {{{secondNameInput}}}
            </div>
            <div class="user__settings-item">
                <p class="user__set_name">Имя в чате</p>
                {{{displayNameInput}}}  
            </div>
            <div class="user__settings-item">
                <p class="user__set_name">Телефон</p>
                {{{phoneInput}}}
            </div>

        </div>
        <div class="form__data-button">
            {{{button}}}
        </div>
    </div>
    {{{modal}}}
</div>